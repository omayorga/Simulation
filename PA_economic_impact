    plt.tight_layout()
    plt.savefig(OUTPUT_DIR / 'fig11_free_college_individual_roi.png', dpi=300, bbox_inches='tight')
    plt.close()
    print("Saved: fig11_free_college_individual_roi.png")

except Exception as e:
