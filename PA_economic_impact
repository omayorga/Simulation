    ax2.axhline(y=1.0, color='red', linestyle='--', linewidth=1.5, label='Break-Even (1.0x)')
    ax2.fill_between(simulation_horizons, state_rois, 1.0,
                     where=[r >= 1.0 for r in state_rois], alpha=0.2, color='#06D6A0')
